{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "warn",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off",
        "no-unused-vars": "warn",
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/alt-text": "off",
        "no-console": "off",
        "jsx-a11y/label-has-associated-control": "off"
    }
}
